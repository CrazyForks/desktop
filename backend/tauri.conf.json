{
  "app": {
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": ["https://fonts.gstatic.com"],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    },
    "trayIcon": {
      "iconAsTemplate": false,
      "iconPath": "icons/icon.png"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Atuin",
        "width": 1200,
        "height": 1000,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ]
  },
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "createUpdaterArtifacts": true
  },
  "identifier": "sh.atuin.app",
  "plugins": {
    "shell": {
      "open": true
    },

    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlGNUQ5Rjc5NDhCRkY2RjkKUldUNTlyOUllWjlkbjNVMlVoYWJJaGxOZ3FqdWkycE1TSzhTVERYWUdIekFYQ0FtUGc2UTh2a1kK",
      "dialog": true,
      "endpoints": [
        "https://releases.atuin.sh/{{target}}/{{arch}}/{{current_version}}",
        "https://github.com/atuinsh/desktop/releases/latest/download/latest.json",
        "https://cdn.crabnebula.app/update/atuin/atuin-desktop/{{target}}-{{arch}}/{{current_version}}"
      ]
    }
  },
  "productName": "Atuin"
}
